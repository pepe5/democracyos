#forum-home
  flex 1
  overflow auto
  padding-bottom 60px

  .cover
    margin-bottom 30px
    padding 30px 0 40px
    width 100%
    color #444
    text-align center
    background-size cover
    background-color #f9f9f9
    background-position center center

  .cover-content
    margin 0 auto
    padding 0 10px
    max-width 790px

    h1
      margin-bottom .2em

  .topics-container
    display flex
    flex-wrap wrap
    justify-content center

  .no-topics
    text-align center
    p
      color #888

  @import './topic-card/styles'
